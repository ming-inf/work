alias virc='vi ~/.zshrc && source $_'
alias rc='source ~/.zshrc'

alias po=popd
alias pu=pushd

alias cls=clear

alias grep='grep --color=auto'

alias ga='git add'
alias gauth='git blame' # author
alias gai='git add -i'
alias gb='git branch'
alias gba='git branch --all'
alias gc='git commit -vv'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff --histogram'
alias gds='git diff --histogram --staged'
alias gf='git fetch'
alias gfa='git fetch --all'
alias gl='git log --graph --decorate --oneline -25 --all'
alias gld='git log --graph --decorate --oneline -25 @{u}..'
alias gg='git log --graph --date=format-local:"%F %T" --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" -$(($LINES/3))'
alias ggd='git log --graph --date=format-local:"%F %T" --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" @{u}.. -25'
alias ggg='git log --graph --date=format-local:"%F %T" --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" -$(($LINES*2/3)) --all'
alias gpl='git pull'
alias gp='git push'
alias gpb='git push bitbucket'
alias gph='git push github'
alias gpl='git push gitlab'
alias gr='git rebase'
alias gri='git rebase -i'
alias grv='git remote -v'
alias gs='git status -s'
alias gss='git status'
alias gst='git stash'
alias gstd='git stash drop'
alias gstp='git stash pop'
alias gunwip='git log -n 1 | grep -q -c "\-\-wip\-\-" && git reset HEAD~1'
alias gwip='git add -A; git rm $(git ls-files --deleted) 2> /dev/null; git commit -m "--wip--"'

alias adoc='asciidoc'
