alias virc='vi ~/.zshrc && source $_'
alias reloadrc='source ~/.zshrc'

alias po=popd
alias pu=pushd

alias cls=clear

alias l='ls -l --color=auto'
alias ll='ls -al --color=auto'
alias ld='ls -adl */ .*/ --color=auto'

alias grep='grep --color=auto'

alias ga='git add'
alias gai='git add -i'
alias gb='git branch'
alias gc='git commit -vv'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff --histogram'
alias gds='git diff --histogram --staged'
alias gf='git fetch'
alias gfa='git fetch --all'
alias gl='git log --graph --decorate --oneline -25 --all'
alias gld='git log --graph --decorate --oneline -25 @{u}..'
alias gg='git log --graph --date=iso --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" -25'
alias ggd='git log --graph --date=iso --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" @{u}.. -25'
alias ggg='git log --graph --date=iso --format=format:"%h %C(dim white)%ad%C(reset) %s %C(dim white)%an (%ae)%C(reset)%C(auto)%d" -50 --all'
alias gpl='git pull'
alias gp='git push'
alias gpb='git push bitbucket'
alias gph='git push github'
alias gpl='git push gitlab'
alias gr='git rebase'
alias grv='git remote -v'
alias gs='git status -s'
alias gss='git status'
alias gst='git stash'
alias gstp='git stash pop'

alias adoc='asciidoc'
